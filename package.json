{
  "name": "kxai",
  "version": "0.1.0",
  "description": "KxAI â€” Personal AI Desktop Agent with screen awareness, proactive suggestions, and persistent memory",
  "main": "dist/main/main.js",
  "author": {
    "name": "xWolin",
    "email": "xwolin@users.noreply.github.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:renderer\" \"npm run dev:main:watch\"",
    "dev:renderer": "vite",
    "dev:main:watch": "tsc -p tsconfig.main.json --watch",
    "dev:main": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "dist": "npm run build && electron-builder",
    "lint": "eslint src/",
    "start": "electron ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.0",
    "electron-store": "^8.2.0",
    "marked": "^15.0.0",
    "openai": "^4.73.0",
    "screenshot-desktop": "^1.15.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "electron-icon-builder": "^2.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.kxai.desktop",
    "productName": "KxAI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/mac/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/png/256x256.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "assets/icons/win/icon.ico",
      "uninstallerIcon": "assets/icons/win/icon.ico",
      "installerHeaderIcon": "assets/icons/win/icon.ico"
    }
  }
}
