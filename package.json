{
  "name": "kxai",
  "version": "0.1.4",
  "description": "KxAI â€” Personal AI Desktop Agent with screen awareness, proactive suggestions, and persistent memory",
  "main": "dist/main/main.js",
  "author": {
    "name": "xWolin",
    "email": "xwolin@users.noreply.github.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "npm run build:main && concurrently -n vite,tsc,electron -c blue,yellow,green \"npm run dev:renderer\" \"npm run dev:main:watch\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main:watch": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:main": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json && npm run copy:main-assets",
    "copy:main-assets": "node -e \"const fs=require('fs'),p=require('path');const src=p.join('src','main','services','dashboard-spa.html');const dst=p.join('dist','main','services','dashboard-spa.html');fs.mkdirSync(p.dirname(dst),{recursive:true});fs.copyFileSync(src,dst);console.log('Copied dashboard-spa.html')\"",
    "dist": "npm run build && electron-builder",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.main.json",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:env": "vitest run tests/environment/ --reporter=verbose",
    "test:security": "vitest run tests/environment/security.test.ts --reporter=verbose",
    "test:e2e": "npm run build && npx playwright test --config=e2e/playwright.config.ts",
    "preflight": "npm run test:env && npm run typecheck && npm run format:check",
    "audit:prod": "npm audit --omit=dev",
    "changelog": "node scripts/generate-changelog.js",
    "changelog:latest": "node scripts/generate-changelog.js --latest",
    "release": "npm run preflight && npm run changelog && git add CHANGELOG.md && npm version",
    "release:patch": "npm run preflight && npm run changelog && git add CHANGELOG.md && npm version patch -m \"release: v%s\" && git push --follow-tags",
    "release:minor": "npm run preflight && npm run changelog && git add CHANGELOG.md && npm version minor -m \"release: v%s\" && git push --follow-tags",
    "release:major": "npm run preflight && npm run changelog && git add CHANGELOG.md && npm version major -m \"release: v%s\" && git push --follow-tags",
    "postversion": "git push && git push --tags",
    "start": "electron .",
    "prepare": "husky",
    "postinstall": "node -e \"process.env.SKIP_ELECTRON_REBUILD || require('child_process').execSync('electron-rebuild -f', {stdio:'inherit'})\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.0",
    "@modelcontextprotocol/sdk": "^1.27.0",
    "better-sqlite3": "^12.6.2",
    "dompurify": "^3.3.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.8.3",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "mammoth": "^1.11.0",
    "marked": "^15.0.0",
    "node-ical": "^0.25.4",
    "openai": "^4.73.0",
    "pdf-parse": "^2.4.5",
    "shiki": "^3.23.0",
    "sqlite-vec": "0.1.7-alpha.2",
    "tsdav": "^2.1.8",
    "uuid": "^11.0.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.39.3",
    "@playwright/test": "^1.58.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.0.0",
    "electron": "^35.7.5",
    "electron-builder": "^26.8.1",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^9.39.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1",
    "vite": "^6.0.0",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.kxai.desktop",
    "productName": "KxAI",
    "publish": [
      {
        "provider": "github",
        "owner": "xWolin",
        "repo": "KxAI"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "src/main/prompts",
        "to": "prompts"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/mac/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "afterSign": "scripts/notarize.js",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/png/256x256.png",
      "category": "Utility"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**",
      "node_modules/sqlite-vec/**"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "assets/icons/win/icon.ico",
      "uninstallerIcon": "assets/icons/win/icon.ico",
      "installerHeaderIcon": "assets/icons/win/icon.ico"
    }
  },
  "overrides": {
    "phantomjs-prebuilt": "npm:noop3@1000.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
